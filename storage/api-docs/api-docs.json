  "tags": [
    {
      "name": "Listings",
      "description": "API Endpoints untuk barang"
    },
    {
      "name": "Authentication",
      "description": "API Endpoints untuk authentikasi user"
    },
    {
      "name": "Transactions",
      "description": "API Endpoints untuk transaksi"
    }
