{
  "openapi": "3.0.0",
  "info": {
    "title": "Monolith API Documentation",
    "description": "Dokumentasi yang dipakain oleh website fullstack Monolith",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Local server"
    }
