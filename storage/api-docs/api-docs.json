  "paths": {
    "/listing": {
      "get": {
        "tags": [
          "Listings"
        ],
        "summary": "Mengambil barang",
        "description": "Mengembalikan list of barang",
        "operationId": "getListing",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Pencarian berdasarkan nama dan kode barang",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200"
                }
              }
            }
          },
          "500": {
            "description": "dead single service",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeadSingleServiceErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/listing/{id}": {
      "get": {
        "tags": [
          "Listings"
        ],
        "summary": "Mencari barang by id.",
        "description": "Mengembalikan satu barang.",
        "operationId": "getListingById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID dari barang yang dicari",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_1"
                }
              }
            }
          },
          "400": {
            "description": "id not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_400"
                }
              }
            }
          },
          "500": {
            "description": "dead single service",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeadSingleServiceErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Listings"
        ],
        "summary": "Update barang by id.",
        "description": "Memperbaharui informasi barang.",
        "operationId": "updateBarang",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID dari barang yang akan di-update",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Listing"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_200_2"
                }
              }
            }
          },
          "400": {
            "description": "bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/inline_response_400_1"
                }
              }
            }
          },
          "401": {
            "description": "unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnauthorizedErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "dead single service",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DeadSingleServiceErrorResponse"
                }
              }
            }
          }
        }
      }
    },
