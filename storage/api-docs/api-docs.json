  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "readOnly": true,
            "example": 1
          },
          "first_name": {
            "type": "string",
            "example": "Abiel"
          },
          "last_name": {
            "type": "string",
            "example": "Saffa"
          },
          "username": {
            "type": "string",
            "example": "abiel123"
          },
          "email": {
            "type": "string",
            "example": "abiel@gmail.com"
          }
        }
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "readOnly": true,
            "example": 1
          },
          "item_name": {
            "type": "string",
            "example": "Samsung Galaxy Tab A7 Lite Wifi 3GB/32GB - Gray"
          },
          "price": {
            "type": "integer",
            "format": "int32",
            "example": 1899000
          },
          "amount": {
            "type": "integer",
            "format": "int32",
            "example": 1
          },
          "user_id": {
            "type": "integer",
            "format": "int32",
            "example": 1
          },
          "created_at": {
            "type": "string",
            "format": "date",
            "readOnly": true
          },
          "updated_at": {
            "type": "string",
            "format": "date",
            "readOnly": true
          }
        }
      },
      "Listing": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "readOnly": true,
            "example": "fe6f6bf7-ace1-491f-ade1-9cc9a90481df"
          },
          "nama": {
            "type": "string",
            "example": "Samsung Galaxy Tab A7 Lite Wifi 3GB/32GB - Gray"
          },
          "harga": {
            "type": "integer",
            "format": "int32",
            "example": 1899000
          },
          "stok": {
            "type": "integer",
            "format": "int32",
            "example": 50
          },
          "kode": {
            "type": "string",
            "example": "TAB1"
          },
          "perusahaan_id": {
            "type": "string",
            "format": "uuid",
            "example": "e16bf2cc-d503-4d2c-8010-1a4e5f30ab24"
          }
        }
      },
      "UnauthorizedErrorResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "error"
          },
          "message": {
            "type": "string",
            "example": "User not logged in"
          }
        }
      },
      "DeadSingleServiceErrorResponse": {
